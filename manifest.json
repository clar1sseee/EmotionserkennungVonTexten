{
  "manifest_version": 3,
  "name": "Text Sentiment Analyzer",
  "version": "1.0.0",
  "author": "Clarisse Tiongson",
  "description": "Chrome Extension zur Erkennung emotionaler Tonalit√§ten in Texten.",
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "host_permissions": [
    "https://*.x.com/*",
    "https://*.reddit.com/*",
    "https://language.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "iconImage/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.x.com/*",
        "https://*.twitter.com/*",
        "https://*.reddit.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidePanel.html"
  }
}
